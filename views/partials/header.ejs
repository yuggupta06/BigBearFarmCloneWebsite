<%- include('first'); %>
<header>
    <div class="fixed top-0 left-0 right-0 p-2 flex justify-between items-center bg-[#72173f] z-50 p-6">
        <div id="nav-menu" class="hidden lg:flex gap-12">
            <a href="/" class="font-medium hover:text-blue-700 pl-[80px] text-xl text-white duration-300">Home</a>
            <a href="#" class="font-medium hover:text-blue-700 text-xl text-white duration-300">Gift Boxes</a>
            <a href="#" class="font-medium hover:text-blue-700 text-xl text-white duration-300">Recipes</a>
            <a href="/aboutus" class="font-medium hover:text-blue-700 text-xl text-white duration-300">About Us</a>
            <a href="/contact" class="font-medium hover:text-blue-700 text-xl text-white duration-300">Contact</a>
        </div>
        
        <!-- Hamburger Menu Button -->
        <button class="p-1 lg:hidden" onclick="handleMenu()">
            <i class="fa-solid fa-bars text-white"></i>
        </button>
        <div class="flex flex-row justify-center items-center md:pr-[100px] gap-4 sm:gap-6">
            <!-- Search Icon with Overlay Trigger -->
            <a href="javascript:void(0);" onclick="toggleSearchOverlay()" class="sm:text-2xl">
                <i class="fa-solid fa-magnifying-glass text-white hover:text-blue-700"></i>
            </a>
            <a href="/cart" class="sm:text-2xl"><i class="fa-solid fa-bag-shopping text-white hover:text-blue-700"></i></a>
            <a href="/signin" class="sm:text-2xl "><i class="fa-solid fa-user text-white hover:text-blue-700"></i></a>

        </div>
        
        <!-- Fixed Image -->
        <img src="assets (1)/asset 0.png" alt="" class="fixed top-16 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[100px] h-[100px] md:w-[140px] md:h-[140px]">
    </div>

    <!-- Mobile Navigation Dialog -->
    <div id="nav-dialog" class="hidden fixed z-10 md:hidden bg-[#72173f] inset-0 p-3">
        <div class="flex justify-between">
            <button class="p-2" onclick="handleMenu()">
                <i class="fa-solid fa-xmark text-white"></i>
            </button>
        </div>
        <div class="mt-6">
            <a href="#" class="font-medium m-3 p-3 hover:bg-[#8b2c55] block rounded-lg text-xl text-white">Shop</a>
            <a href="#" class="font-medium m-3 p-3 hover:bg-[#8b2c55] block rounded-lg text-xl text-white">Gift Boxes</a>
            <a href="#" class="font-medium m-3 p-3 hover:bg-[#8b2c55] block rounded-lg text-xl text-white">Recipes</a>
            <a href="#" class="font-medium m-3 p-3 hover:bg-[#8b2c55] block rounded-lg text-xl text-white">About Us</a>
            <a href="#" class="font-medium m-3 p-3 hover:bg-[#8b2c55] block rounded-lg text-xl text-white">Contact</a>
        </div>
        <div class="h-[1px] bg-gray-200"></div>
    </div>
</header>

<!-- Search Overlay -->
<div id="search-overlay" class="hidden fixed inset-0 bg-black bg-opacity-75 flex justify-center items-start pt-20 z-50">
    <div class="relative w-3/4 lg:w-1/2">
        <!-- Search Bar -->
        <div class="fixed top-0 left-0 right-0 mx-auto w-3/4 lg:w-1/2 p-4">
            <input id="search-input" type="text" placeholder="Search..." class="p-4 text-xl rounded-xl bg-[#72173f] w-full" oninput="showSearchResults()">
            
            <!-- Close Button -->
            <button onclick="toggleSearchOverlay()" class="absolute top-2 right-2 p-6 text-white text-xl">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>
        
        <!-- New Div for Search Results -->
        
        <div id="search-results" class="flex flex-col space-x-4 mt-2 ml-8 hidden p-4  bg-white rounded-lg shadow-md sm:w-[500px] w-3/4">
            <a class="search-link inline-flex flex flex-row">
            <img id="item_img" src="" alt="" class="w-[50px]">
            <span class="text-2xl font-semibold pt-2 pl-1 " id="itemname">No items in the list<span>
            </a>
        </div>
    </div>
</div>

